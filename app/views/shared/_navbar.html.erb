<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= 'navbar-home' if current_page?(root_path) %>">
  <%= link_to root_path do %>
    <div class="nomad-logo">
      <i class="fas fa-campground"></i>
    </div>
    <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown navbar-avatar">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", users_show_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>


            <div class="d-flex flex-row signup-login">
              <div class="login">
                <button name="login" type="button" class="btn btn-light nomad-button" data-toggle="modal" data-target="#loginModal">Login
                </button>
              </div>
              <div class="signup">
                <button name="signup" type="button" class="btn btn-light nomad-button-invert" data-toggle="modal" data-target="#signupModal">SignUp
                </button>
              </div>
            </div>

        <% end %>
      </ul>
    </div>
</div>
