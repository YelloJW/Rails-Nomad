<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= 'navbar-home' if current_page?(root_path) %>">
  <%= link_to root_path do %>
    <div class="nomad-logo">
      <i class="fas fa-campground"></i>
    </div>
  <% end %>
  <div>
    <h1 class="visible-title <%= 'invisible-title' if current_page?(root_path) %>">Nomad</h1>
  </div>
  <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown navbar-avatar">
          <%= image_tag "batch_319-12.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
    <% else %>
      <div class="d-flex flex-row justify-content-between signup-login">
        <div class="login">
          <button name="login" type="button" class="nomad-button" data-toggle="modal" data-target="#loginModal">Login
          </button>
        </div>
        <div class="signup">
          <button name="signup" type="button" class="nomad-button" data-toggle="modal" data-target="#signupModal">Sign Up
          </button>
        </div>
      </div>
    <% end %>
      </ul>
  </div>
</div>
