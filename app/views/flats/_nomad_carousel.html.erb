<!-- HTML code for carousel on show page -->
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 div-no-padding w-100">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @flat.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= "active" if index == 0  %> ">
            <%= cl_image_tag photo.key, alt: "First slide", class: "w-100" %>
        </div>
      <% end %>
    </div>
    <!-- next & previous buttons on carousel -->
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <br>
  </div>
</div>


